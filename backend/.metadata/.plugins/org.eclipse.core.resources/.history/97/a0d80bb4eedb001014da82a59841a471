package com.yourorg.telemedicine.alert.client;


import com.yourorg.telemedicine.alert.dto.VitalReadingDto;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

@FeignClient(name = "wearable-service")
public interface WearableClient {

	@GetMapping("/wearables/vitals/recent/{patientId}")
    List<VitalReadingDto> getRecentVitals(@PathVariable Long patientId);
}

