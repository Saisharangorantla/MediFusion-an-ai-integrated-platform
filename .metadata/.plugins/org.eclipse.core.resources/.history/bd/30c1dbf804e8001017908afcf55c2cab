package com.yourorg.telemedicine.alert.client;



import com.yourorg.telemedicine.alert.dto.VitalData;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import java.util.List;

@FeignClient(name = "WEARABLE-SERVICE")
public interface WearableClient {

	@GetMapping("/wearable/vitals/latest/{patientId}")
	VitalData getLatestVitals(@PathVariable("patientId") Long patientId);

}

