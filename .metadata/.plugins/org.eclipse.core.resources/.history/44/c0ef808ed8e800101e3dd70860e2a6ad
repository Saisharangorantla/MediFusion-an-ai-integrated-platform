    public PatientDTO getById(Long id) {
        var p = repo.findById(id).orElseThrow(() -> new ResourceNotFoundException("Patient not found"));
        var dto = new PatientDTO();
        dto.setId(p.getId()); 
        dto.setFullname(p.getFullname()); 
        dto.setGender(p.getGender());
        dto.setContact(p.getContact()); 
        dto.setEmail(p.getEmail()); 
        dto.setAddress(p.getAddress());
        dto.setAge(p.getAge());
        dto.setUserId(p.getUserId());
        return dto;
    }

    public List<PatientDTO> listAll() {
        return repo.findAll().stream().map(p -> {
            var dto = new PatientDTO();
            dto.setId(p.getId()); 
            dto.setFullname(p.getFullname()); 
            dto.setGender(p.getGender());
            dto.setContact(p.getContact()); 
            dto.setEmail(p.getEmail()); 
            dto.setAddress(p.getAddress());
            dto.setAge(p.getAge());
            dto.setUserId(p.getUserId());
            return dto;
        }).collect(Collectors.toList());
    }

	@Override
	public PatientDTO getByUserId(Long userId) {
		var p = repo.findByUserId(userId).orElseThrow(() -> new ResourceNotFoundException("Patient not found for user ID: " + userId));
		var dto = new PatientDTO();
		dto.setId(p.getId()); 
		dto.setFullname(p.getFullname()); 
		dto.setGender(p.getGender());
		dto.setContact(p.getContact()); 
		dto.setEmail(p.getEmail()); 
		dto.setAddress(p.getAddress());
		dto.setAge(p.getAge());
		dto.setUserId(p.getUserId());
		return dto;
	}
	
	public void save(PatientCreateRequest request) {

	    Patient patient = new Patient();
	    patient.setUserId(request.getUserId());
	    patient.setFullname(request.getFullName());
	    patient.setGender(request.getGender());
	    patient.setContact(request.getContact());
	    patient.setEmail(request.getEmail());
	    patient.setAddress(request.getAddress());
	    patient.setAge(request.getAge());

	    repo.save(patient);
	}



}
